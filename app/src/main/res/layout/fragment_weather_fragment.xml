<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".fragments.weather_fragment" android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#03A9F4">


        <TextView
            android:id="@+id/txtcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:text="CITY"
            android:textColor="#FFFF"
            android:textSize="38dp" />

        <TextView
            android:id="@+id/txttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:text="time"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/txttime"
            android:src="@drawable/cloudy" />

        <TextView
            android:id="@+id/txtValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgIcon"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="13°C"
            android:textColor="#ffff"
            android:textSize="70dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="80dp"


        android:layout_marginStart="2dp"
        android:layout_marginTop="252dp"
        android:background="#ffff"
        android:padding="17dp">

        <ImageView
            android:id="@+id/imgfeelslike"
            android:layout_width="40dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/thermometer" />

        <TextView
            android:id="@+id/feelslike"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="-72dp"
            android:layout_toRightOf="@id/imgfeelslike"
            android:text="feels like "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/feelslikvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/feelslike"
            android:layout_alignLeft="@id/feelslike"
            android:text="16°C"
            android:textSize="18dp" />
    </RelativeLayout>

</RelativeLayout>